{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "declaration": true,
        "noImplicitAny": false,
        "noEmitHelpers": true,
        "typeRoots": [
            "./node_modules/@types/"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*-aot.ts",
        "custom-client-files",
        "node_modules/@types/typescript/**/*.d.ts",
        "node_modules/@types/core-js/**/*.d.ts"
    ]
}